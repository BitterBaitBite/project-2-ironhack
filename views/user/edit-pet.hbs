<form class="col-6 container-fluid" action="/profile/{{pet.id}}/edit" method="POST" enctype="multipart/form-data">
    <div class="row g-0">

        {{#with pet}}

        <div class="mb-3 col-12">
            <label for="name-input" class="form-label"><span>Name</span></label>
            <input type="text" class="form-control" id="name-input" aria-describedby="name-input" name="name"
                value="{{name}}">
        </div>

        <div class="mb-3 col-12">
            <label for="description-input" class="form-label"><span>Description</span></label>
            <textarea name="description" id="description-input" cols="30" rows="10"
                class="form-control">{{description}}</textarea>
        </div>

        <div class="mb-3 col-12">
            <label for="species-input" class="form-label"><span>Species</span></label>
            <input type="text" class="form-control" id="species-input" name="species" value="{{species}}">
        </div>

        <div class="mb-3 col-12 container-fluid">
            <label class="form-label row g-0 address-block"><span>Address</span>

                <label class="form-label full-width margin-bottom-2">Street</label>
                <input type="text" class="form-control col-12 addressInput" id="street-input" name="street"
                    value='{{address.street}}'>

                <label class="form-label">Postal</label>
                <input type="text" class="form-control col-12 addressInput" id="postal-input" name="postal"
                    value='{{address.postal}}'>

                <label class="form-label">Number</label>
                <input type="number" class="form-control col-12 addressInput" id="number-input" name="number"
                    value='{{address.number}}'>

                <label class="form-label">Country</label>
                <input type="text" class="form-control col-12 addressInput" id="country-input" name="country"
                    value='{{address.country}}'>

                <label class="form-label">City</label>
                <input type="text" class="form-control col-12 addressInput" id="city-input" name="city"
                    value='{{address.city}}'>

            </label>
        </div>

        <div class="mb-3 col-12">
            <label for="age-input" class="form-label"><span>Age</span></label>
            <input type="number" class="form-control" id="age-input" name="age" value="{{age}}">
        </div>

        <div class="mb-3 col-12">
            <label for="gender-input" class="form-label"><span>Gender</span></label>
            <select name="gender" id="gender-input" class="form-control">
                <option value="UNDEFINED">UNDEFINED</option>
                <option value="MALE">MALE</option>
                <option value="FEMALE">FEMALE</option>
            </select>
        </div>

        <div class="mb-3 col-12">
            <label for="profile_img" class="form-label"><span>Profile image</span></label>
            <input type="file" class="form-control" id="profile_img" name="profile_img" value="{{profile_img}}">
        </div>

        <button type="submit" class="btn btn-custom col-12">Update</button>

        {{/with}}

        {{#if errorMessage}}
        <div class="error col-12">{{errorMessage}}</div>
        {{/if}}

    </div>
</form>

<div id="petEnabledMap"></div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script src="../../js/scriptmap.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{MAPS_KEY}}&callback=initGeocoderMap"></script>