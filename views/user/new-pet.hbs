<form class="col-6 container-fluid" action="new-pet" method="POST" enctype="multipart/form-data">
    <div class="row g-0">

        <div class="mb-3 col-12">
            <label for="name-input" class="form-label">Name</label>
            <input type="text" class="form-control" id="name-input" aria-describedby="name-input" name="name">
        </div>

        <div class="mb-3 col-12">
            <label for="description-input" class="form-label">Description</label>
            <textarea name="description" id="description-input" cols="30" rows="10" class="form-control"></textarea>
        </div>

        <div class="mb-3 col-12">
            <label for="species-input" class="form-label">Species</label>
            <input type="text" class="form-control" id="species-input" name="species">
        </div>

        <div class="mb-3 col-12 container-fluid">
            <label class="full-width margin-bottom-2 row g-0 address-block"><span>Address</span>

                <label class="form-label">Street</label>
                <input type="text" class="form-control col-12 addressInput" id="street-input" name="street">

                <label class="form-label">Postal</label>
                <input type="text" class="form-control col-12 addressInput" id="postal-input" name="postal">

                <label class="form-label">Number</label>
                <input type="number" class="form-control col-12 addressInput" id="number-input" name="number">

                <label class="form-label">Country</label>
                <input type="text" class="form-control col-12 addressInput" id="country-input" name="country">

                <label class="form-label">City</label>
                <input type="text" class="form-control col-12 addressInput" id="city-input" name="city">

                <div id="petEnabledMap" class="map col-12"></div>
            </label>
        </div>

        <div class="mb-3 col-12">
            <label for="age-input" class="form-label">Age</label>
            <input type="number" class="form-control" id="age-input" name="age">
        </div>

        <div class="mb-3 col-12">
            <label for="gender-input" class="form-label">Gender</label>
            <select name="gender" id="gender-input" class="form-control">
                <option value="UNDEFINED">UNDEFINED</option>
                <option value="MALE">MALE</option>
                <option value="FEMALE">FEMALE</option>
            </select>
        </div>

        <div class="mb-3 col-12">
            <label for="profile-img-input" class="form-label">Profile image</label>
            <input type="file" class="form-control" id="profile-img-input" name="profile_img">
        </div>

        <button type="submit" class="btn btn-custom">Add</button>

        {{#if errorMessage}}
        {{errorMessage}}
        {{/if}}

    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script src="../js/scriptmap.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{MAPS_KEY}}&callback=initGeocoderMap"></script>