<div class="container">

    <div class="row justify-content-center">
        <div class='col-10 container-fluid'>

            <h2>Users Panel</h2>

            <ul class="row g-1 ">
                {{#each users}}
                <li class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <h3>{{username}}</h3>

                    <form action="/admin/{{_id}}/edit-user" method="GET">
                        <button type="submit" class="btn btn-custom full-width col-12 col-sm-6 col-md-4">Edit
                            User</button>
                    </form>

                    <form action="/admin/{{_id}}/delete-user" method="POST">
                        <button type="submit" class="btn btn-warning full-width col-12 col-sm-6 col-md-5">Delete
                            User</button>
                    </form>


                    <label for="">Pets:</label>
                    <ul>

                        {{#each pets}}
                        <li>

                            {{!-- <img src='{{profile_img}}' alt="profile image" class="col-12"> --}}

                            <div class="col-12">
                                <h2>{{name}}</h2>

                                <label><span>Description</span></label>
                                <p class="description-block">{{description}}</p>

                                <p>Species: {{species}}</p>

                                <label class="address-block full-width"><span>Address</span>
                                    <p>Country: {{address.country}}</p>
                                    <p>City: {{address.city}}</p>
                                </label>

                                <p>Age: {{age}}</p>
                                <p>Gender: {{gender}}</p>
                            </div>

                            <div class="col-12">
                                <ul>
                                    {{#each reviews}}
                                    <li>
                                        <p>Origin: {{origin}}</p>
                                        <p>Body: {{body}}</p>
                                        <p>Date: {{date}}</p>
                                        <p>Rating: {{rating}}</p>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>

                            <div class="col-12">
                                <ul>
                                    {{#each friends}}
                                    <li>
                                        <p>Name: {{name}}</p>
                                        <p>Id: {{_id}}</p>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>


                            <form action="/pets/{{_id}}/edit" method="GET">
                                <button type="submit" class="btn btn-custom full-width col-12 col-sm-6 col-md-4">Edit
                                    Pet</button>
                            </form>

                            <form action="/pets/{{_id}}/delete" method="POST">
                                <button type="submit" class="btn btn-warning full-width col-12 col-sm-6 col-md-5">Delete
                                    Pet</button>
                            </form>

                        </li>

                        {{/each}}
                    </ul>
                </li>
                {{/each}}



            </ul>










            <a href="/admin" class="btn btn-custom full-width col-12 col-sm-6 col-md-4">Go Back</a>







        </div>

    </div>

</div>