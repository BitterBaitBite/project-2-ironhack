<form class="col-6 container-fluid" action="/login" method="POST">

   <div class="row g-0">

      <div class="mb-3 col-12">
         <label for="username-input" class="form-label">Username</label>
         <input type="text" class="form-control" id="username-input" aria-describedby="username" name="username">
      </div>

      <div class="mb-3 col-12">
         <label for="password-input" class="form-label">Password</label>
         <input type="password" class="form-control" id="password-input" name="password">
      </div>

      <button type="submit" class="btn btn-custom col-12">Log in</button>

      {{#if errorMessage}}
      <div class="error col-12">{{errorMessage}}</div>
      {{/if}}

   </div>

</form>