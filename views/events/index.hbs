<div class="container">

    <div class="row justify-content-center">

        <div class='col-8'>
            <h1>Events:</h1>
            <ul>
                {{#each events}}
                <li>
                    <h2>Event: {{activity}}</h2>
                    <p>Description: {{description}} </p>

                    <form action="/events/{{../pet_id}}/details/{{_id}}" method="GET">
                        <button type="submit">See Details</button>
                    </form>
                </li>
                {{/each}}
            </ul>
        </div>

        {{!-- Formulario de busqueda --}}
        <form class="col-4" action="/events" method="GET">
            <div class="mb-3">
                <label for="search-input" class="form-label">Search</label>
                <input type="text" class="form-control" id="search-input" aria-describedby="search-input"
                    name="searchText">
            </div>

            {{!--
            <div class="mb-3">
                <label class="mr-sm-2 sr-only" for="creator-input">Creator</label>
                <select class="custom-select mr-sm-2" id="creator-input" name="creator">
                    {{#each pets}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div> --}}

            <div class="mb-3">
                <label class="form-label">Location
                    <input type="number" name="latitude" placeholder="Latitude" class="form-control">
                    <input type="number" name="longitude" placeholder="Longitude" class="form-control">
                </label>
            </div>

            <div class="mb-3">
                <label for="date-input" class="form-label">Date:</label>
                <input type="text" class="form-control" id="date-input" aria-describedby="date-input" name="date">
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>

            {{#if errorMessage}}
            {{errorMessage}}
            {{/if}}

        </form>

    </div>
</div>